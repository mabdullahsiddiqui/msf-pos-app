@page "/user/forgot-password"
@rendermode InteractiveWebAssembly
@layout pos_app.Client.Components.Layout.AuthLayout
@using pos_app.Client.Models
@using pos_app.Client.Services
@using System.ComponentModel.DataAnnotations
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Forgot Password - User</PageTitle>

<div class="card shadow">
    <div class="card-header text-white text-center">
        <h4><i class="fas fa-key"></i> Forgot Password</h4>
    </div>
    <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @successMessage
                            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                        </div>
                    }

                    <EditForm Model="forgotPasswordRequest" OnValidSubmit="HandleForgotPassword" FormName="forgotPasswordForm">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <InputText id="email" type="email" class="form-control" 
                                      @bind-Value="forgotPasswordRequest.Email" 
                                      placeholder="Enter your email address" />
                            <ValidationMessage For="@(() => forgotPasswordRequest.Email)" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                }
                                <i class="fas fa-paper-plane"></i> Send Verification Code
                            </button>
                        </div>
                    </EditForm>

                    <div class="text-center mt-3">
                        <a href="/login" class="text-decoration-none">
                            <i class="fas fa-arrow-left"></i> Back to Login
                        </a>
                    </div>
    </div>
    <div class="card-footer text-center">
        <small class="text-muted">
            <i class="fas fa-info-circle"></i> If you don't receive the verification code, please check your spam folder or contact your administrator.
        </small>
    </div>
</div>

@code {
    private UserForgotPasswordRequest forgotPasswordRequest = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = false;

    private async Task HandleForgotPassword()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            successMessage = string.Empty;

            var response = await AuthService.UserForgotPasswordAsync(forgotPasswordRequest);
            
            if (response.Success)
            {
                // Store email for next step
                await JS.InvokeVoidAsync("localStorage.setItem", "userForgotPasswordEmail", forgotPasswordRequest.Email);
                
                // Store verification code for display on verify page
                if (!string.IsNullOrEmpty(response.VerificationCode))
                {
                    await JS.InvokeVoidAsync("localStorage.setItem", "userVerificationCode", response.VerificationCode);
                }
                
                successMessage = $"Verification code sent to {forgotPasswordRequest.Email}";
                
                // Show verification code for development/testing
                if (!string.IsNullOrEmpty(response.VerificationCode))
                {
                    successMessage += $"\n\nTesting Mode - Verification Code: {response.VerificationCode}";
                }
                
                // Navigate to verification page after a short delay
                await Task.Delay(2000);
                Navigation.NavigateTo("/user/verify-code");
            }
            else
            {
                errorMessage = response.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
