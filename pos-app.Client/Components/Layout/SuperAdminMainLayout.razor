@code {
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private bool isDropdownOpen = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Subscribe to authentication state changes
            AuthState.OnAuthenticationStateChanged += OnAuthenticationStateChanged;
            await CheckAuthentication();
        }
    }

    private void OnAuthenticationStateChanged()
    {
        Console.WriteLine("SuperAdminMainLayout: Authentication state changed, refreshing UI");
        isAuthenticated = AuthState.IsAuthenticated;
        StateHasChanged();
    }

    public void Dispose()
    {
        // Unsubscribe from the event to prevent memory leaks
        AuthState.OnAuthenticationStateChanged -= OnAuthenticationStateChanged;
    }

    private async Task CheckAuthentication()
    {
        try
        {
            Console.WriteLine("SuperAdminMainLayout: Starting authentication check...");
            
            // First check if we have data in memory
            if (AuthState.IsAuthenticated)
            {
                Console.WriteLine("SuperAdminMainLayout: Already authenticated in memory");
                isAuthenticated = true;
                isLoading = false;
                StateHasChanged(); // Force UI update
                return;
            }

            Console.WriteLine("SuperAdminMainLayout: Not in memory, checking localStorage...");
            
            // If not in memory, try to restore from localStorage
            var isRestored = await AuthState.IsSuperAdminAuthenticatedAsync();
            
            Console.WriteLine($"SuperAdminMainLayout: Restoration result: {isRestored}");
            
            if (isRestored)
            {
                Console.WriteLine("SuperAdminMainLayout: Successfully restored from localStorage");
                isAuthenticated = true;
                StateHasChanged(); // Force UI update
            }
            else
            {
                Console.WriteLine("SuperAdminMainLayout: Failed to restore, redirecting to login");
                // Clear any invalid data
                await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "superadmin_auth");
                
                // Small delay to show loading state
                await Task.Delay(500);
                Navigation.NavigateTo("/superadmin/login", forceLoad: true);
                return;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"SuperAdminMainLayout: Exception during auth check: {ex.Message}");
            // If there's any error checking auth, redirect to login
            Navigation.NavigateTo("/superadmin/login", forceLoad: true);
            return;
        }
        finally
        {
            isLoading = false;
            StateHasChanged(); // Force UI update
        }
    }

    private async Task Logout()
    {
        try
        {
            Console.WriteLine("SuperAdminMainLayout: Starting logout process...");
            
            // Close dropdown before logout
            CloseDropdown();
            
            // Use JavaScript to handle logout and navigation to prevent interference
            await JSRuntime.InvokeVoidAsync("performSuperAdminLogout");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"SuperAdminMainLayout: Logout error: {ex.Message}");
            // Fallback navigation
            Navigation.NavigateTo("/superadmin/login", forceLoad: true);
        }
    }

    private async Task ShowHelp()
    {
        try
        {
            // Close dropdown first to prevent any interference
            CloseDropdown();
            
            // Show alert
            await JSRuntime.InvokeVoidAsync("alert", 
                "Super Admin Help\n\n" +
                "• Dashboard: View and manage all application users\n" +
                "• Profile: Manage your account settings and password\n" +
                "• User Management: Create, edit, and test user connections\n\n" +
                "For additional support, contact your system administrator.");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ShowHelp error: {ex.Message}");
        }
    }

    private async Task ShowAbout()
    {
        try
        {
            // Close dropdown first to prevent any interference
            CloseDropdown();
            
            // Show alert
            await JSRuntime.InvokeVoidAsync("alert", 
                "POS System - Super Admin Panel\n\n" +
                "Version: 1.0.0\n" +
                "Built with: Blazor Server\n" +
                "Database: SQL Server\n\n" +
                "© 2024 POS System. All rights reserved.");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ShowAbout error: {ex.Message}");
        }
    }

    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
        StateHasChanged();
    }

    private void CloseDropdown()
    {
        isDropdownOpen = false;
        StateHasChanged();
    }
}

<script>
    window.performSuperAdminLogout = function() {
        console.log("JavaScript: Starting super admin logout...");
        
        // Clear localStorage
        localStorage.removeItem("superadmin_auth");
        console.log("JavaScript: localStorage cleared");
        
        // Small delay to ensure cleanup
        setTimeout(function() {
            console.log("JavaScript: Navigating to super admin login...");
            // Force navigation to super admin login
            window.location.href = "/superadmin/login";
        }, 100);
    };
</script>
