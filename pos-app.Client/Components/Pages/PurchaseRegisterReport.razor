@page "/reports/purchase-register"
@using pos_app.Client.Services
@using pos_app.Client.Models
@using pos_app.Client.Components.Shared
@inject DataService DataService
@inject SessionService SessionService

<PageTitle>Purchase Register Report - POS System</PageTitle>

<style>
    .subtotal-row {
        background-color: #f8f9fa !important;
        font-weight: bold;
    }
    
    .register-table td {
        vertical-align: top;
    }
    
    .register-table .text-end {
        text-align: right;
    }
    
    /* Ensure header text is black */
    .register-table thead th {
        color: #000 !important;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <!-- Date Filter and Invoice Type Selection -->
            <FilterCard Title="Purchase Register (Date to Date)" IconClass="fas fa-book">
                <div class="row mb-3">
                    <DateInput Label="From Date:" Id="fromDate" @bind-Value="fromDate" MinDate="@minDate" />
                    <DateInput Label="Upto Date:" Id="toDate" @bind-Value="toDate" />
                    <div class="col-md-3">
                        <label class="form-label">Invoice Type:</label>
                        <select class="form-select" @bind="invoiceType">
                            <option value="All">All</option>
                            <option value="Crop">Crop</option>
                            <option value="E.Sack">E.Sack</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end gap-2">
                        <ActionButton Text="Preview" IconClass="fas fa-search" OnClick="LoadPurchaseRegister" IsLoading="@isLoading" IsDisabled="@isLoading" />
                    </div>
                </div>
            </FilterCard>

            <!-- Loading Indicator -->
            @if (isLoading)
            {
                <LoadingSpinner Message="Generating purchase register report..." />
            }

            <!-- Error Message -->
            <ErrorAlert Message="@errorMessage" />

            <!-- Report Data -->
            @if (purchaseRegisterData != null && purchaseRegisterData.Success)
            {
                <ReportTable FilterableColumns="@(new List<int> { 0, 1, 2, 3, 4, 5 })">
                    <HeaderContent>
                        <ReportTitleHeader Title="Purchase Register" IconClass="fas fa-book">
                            <DateRangeContent>
                                From: @purchaseRegisterData.FromDate.ToString("dd/MM/yyyy") 
                                To Date: @purchaseRegisterData.ToDate.ToString("dd/MM/yyyy")
                            </DateRangeContent>
                        </ReportTitleHeader>
                    </HeaderContent>
                    
                    <SummaryCards>
                        <SummaryCard Title="Total Weight" Value="@CurrencyHelper.FormatNumber(purchaseRegisterData.TotalWeight)" BgColor="info" ColumnClass="col-md-4" />
                        <SummaryCard Title="Total Amount" Value="@CurrencyHelper.FormatNumber(purchaseRegisterData.TotalAmount)" BgColor="success" ColumnClass="col-md-4" />
                        <SummaryCard Title="Invoice Type" Value="@purchaseRegisterData.InvoiceType" BgColor="warning" ColumnClass="col-md-4" />
                    </SummaryCards>

                    <BodyContent>
                        <div class="table-responsive">
                            <table class="table table-bordered register-table">
                                <thead>
                                    <tr>
                                        <th>Invoice type</th>
                                        <th>Invoice No</th>
                                        <th>Date</th>
                                        <th>Supplier</th>
                                        <th>Vehicle No.</th>
                                        <th>Item</th>
                                        <th>Packing</th>
                                        <th class="text-end">Qty.</th>
                                        <th class="text-end">Weight</th>
                                        <th class="text-end">Rate.</th>
                                        <th>As per</th>
                                        <th class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (purchaseRegisterData.Data.Any())
                                    {
                                        @foreach (var item in purchaseRegisterData.Data)
                                        {
                                            <tr class="@(item.IsSubTotal ? "subtotal-row" : "")">
                                                <td>@item.InvoiceType</td>
                                                <td>@item.InvoiceNo</td>
                                                <td>
                                                    @if (item.Date.HasValue)
                                                    {
                                                        @item.Date.Value.ToString("dd/MM/yyyy")
                                                    }
                                                </td>
                                                <td>@item.Supplier</td>
                                                <td>@item.VehicleNo</td>
                                                <td>
                                                    @if (item.IsSubTotal)
                                                    {
                                                        <strong>Sub Total</strong>
                                                    }
                                                    else
                                                    {
                                                        @item.Item
                                                    }
                                                </td>
                                                <td>@item.Packing</td>
                                                <td class="text-end">
                                                    @if (!item.IsSubTotal)
                                                    {
                                                        @if (item.Qty % 1 == 0)
                                                        {
                                                            @((int)item.Qty)
                                                        }
                                                        else
                                                        {
                                                            @CurrencyHelper.FormatNumber(item.Qty)
                                                        }
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    @if (item.IsSubTotal)
                                                    {
                                                        <strong>@CurrencyHelper.FormatNumber(item.Weight)</strong>
                                                    }
                                                    else
                                                    {
                                                        @CurrencyHelper.FormatNumber(item.Weight)
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    @if (!item.IsSubTotal)
                                                    {
                                                        @CurrencyHelper.FormatNumber(item.Rate)
                                                    }
                                                </td>
                                                <td>@item.AsPer</td>
                                                <td class="text-end">
                                                    @if (item.IsSubTotal)
                                                    {
                                                        <strong>@CurrencyHelper.FormatNumber(item.Amount)</strong>
                                                    }
                                                    else
                                                    {
                                                        @CurrencyHelper.FormatNumber(item.Amount)
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="12" class="text-center text-muted">No purchase transactions found for the selected period and invoice type.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </BodyContent>

                    <FooterContent>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Total Weight: @CurrencyHelper.FormatNumber(purchaseRegisterData.TotalWeight)</strong>
                            </div>
                            <div class="col-md-6">
                                <strong>Total Amount: @CurrencyHelper.FormatNumber(purchaseRegisterData.TotalAmount)</strong>
                            </div>
                        </div>
                    </FooterContent>
                </ReportTable>
            }
        </div>
    </div>
</div>

@code {
    private DateTime fromDate;
    private DateTime toDate = DateTime.Now;
    private string invoiceType = "All";
    private PurchaseRegisterResponse? purchaseRegisterData;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private DateTime? minDate;
    
    protected override async Task OnInitializedAsync()
    {
        // Get minimum date from session
        minDate = await SessionService.GetMinDateAsync();
        
        // Set fromDate to session start_date if available, otherwise use current month start
        if (minDate.HasValue)
        {
            fromDate = minDate.Value;
        }
        else
        {
            fromDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
        }
        
        toDate = DateTime.Now;
    }

    private async Task LoadPurchaseRegister()
    {
        if (fromDate > toDate)
        {
            errorMessage = "From Date cannot be greater than To Date.";
            return;
        }

        isLoading = true;
        errorMessage = string.Empty;
        purchaseRegisterData = null;

        try
        {
            purchaseRegisterData = await DataService.GetPurchaseRegisterAsync(fromDate, toDate, invoiceType);
            
            if (!purchaseRegisterData.Success)
            {
                errorMessage = purchaseRegisterData.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred while loading the purchase register: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}

