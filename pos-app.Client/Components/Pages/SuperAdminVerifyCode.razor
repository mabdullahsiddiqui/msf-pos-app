@page "/superadmin/verify-code"
@rendermode InteractiveWebAssembly
@layout pos_app.Client.Components.Layout.SuperAdminLayout
@using pos_app.Client.Models
@using pos_app.Client.Services
@inject SuperAdminService SuperAdminService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Verify Code - Super Admin</PageTitle>

<div class="card shadow">
    <div class="card-header text-white text-center">
        <h4><i class="fas fa-shield-alt"></i> Verify Code</h4>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @errorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-check-circle"></i> @successMessage
            </div>
        }

        <div class="text-center mb-4">
            <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
            <h5>Enter Verification Code</h5>
            <p class="text-muted">We've sent a 6-digit verification code to <strong>@email</strong></p>
        </div>

        <!-- Timer Display -->
        <div class="text-center mb-4">
            @if (timeRemaining > 0)
            {
                <div class="alert alert-info">
                    <i class="fas fa-clock"></i> Code expires in <strong>@FormatTime(timeRemaining)</strong>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Code has expired. Please request a new one.
                </div>
            }
        </div>

        <!-- Testing: Show Current Verification Code -->
        @if (!string.IsNullOrEmpty(currentVerificationCode))
        {
            <div class="alert alert-warning text-center mb-4">
                <h6><i class="fas fa-bug"></i> Testing Mode - Current Verification Code:</h6>
                <div class="h3 text-primary font-weight-bold">@currentVerificationCode</div>
                <small class="text-muted">Use this code for testing purposes</small>
            </div>
        }

        <EditForm Model="verifyCodeRequest" OnValidSubmit="HandleVerifyCode" FormName="superAdminVerifyCodeForm">
            <DataAnnotationsValidator />
            
            <div class="mb-3">
                <label for="code" class="form-label">Verification Code</label>
                <InputText id="code" class="form-control text-center" @bind-Value="verifyCodeRequest.Code" 
                          placeholder="000000" maxlength="6" style="font-size: 1.5rem; letter-spacing: 0.5rem;" />
                <ValidationMessage For="@(() => verifyCodeRequest.Code)" />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary" disabled="@(isLoading || timeRemaining <= 0)">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    }
                    <i class="fas fa-check"></i> Verify Code
                </button>
            </div>
        </EditForm>

        <div class="text-center mt-4">
            <button class="btn btn-link text-decoration-none" @onclick="ResendCode" disabled="@(isResending || timeRemaining > 0)">
                @if (isResending)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                }
                <i class="fas fa-redo"></i> Resend Code
            </button>
        </div>

        <div class="text-center mt-3">
            <a href="/superadmin/forgot-password" class="text-decoration-none">
                <i class="fas fa-arrow-left"></i> Back to Forgot Password
            </a>
        </div>
    </div>
    <div class="card-footer text-center">
        <small class="text-muted">
            <i class="fas fa-info-circle"></i> Didn't receive the code? Check your spam folder or resend.
        </small>
    </div>
</div>

@code {
    private VerifyCodeRequest verifyCodeRequest = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = false;
    private bool isResending = false;
    private string email = "imabdullahsiddiqui@gmail.com";
    private int timeRemaining = 600; // 10 minutes in seconds
    private Timer? timer;
    private string currentVerificationCode = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        // Get email from service
        email = await SuperAdminService.GetForgotPasswordEmail();
        if (string.IsNullOrEmpty(email))
        {
            Navigation.NavigateTo("/superadmin/forgot-password");
            return;
        }

        verifyCodeRequest.Email = email;
        
        // Get current verification code for testing
        await GetCurrentVerificationCode();
        
        // Start timer
        StartTimer();
    }

    private void StartTimer()
    {
        timer = new Timer(async _ =>
        {
            timeRemaining--;
            if (timeRemaining <= 0)
            {
                timer?.Dispose();
            }
            await InvokeAsync(StateHasChanged);
        }, null, 1000, 1000);
    }

    private string FormatTime(int seconds)
    {
        var minutes = seconds / 60;
        var remainingSeconds = seconds % 60;
        return $"{minutes:00}:{remainingSeconds:00}";
    }

    private async Task HandleVerifyCode()
    {
        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            var response = await SuperAdminService.VerifyCodeAsync(verifyCodeRequest);
            
            if (response.Success)
            {
                successMessage = "Code verified successfully! Redirecting to reset password...";
                currentVerificationCode = string.Empty; // Clear the displayed code
                
                // Store reset token for next step
                await SuperAdminService.SetResetToken(response.ResetToken);
                
                // Navigate to reset password page after a short delay
                await Task.Delay(2000);
                Navigation.NavigateTo("/superadmin/reset-password");
            }
            else
            {
                errorMessage = response.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ResendCode()
    {
        isResending = true;
        errorMessage = string.Empty;

        try
        {
            var request = new ResendCodeRequest { Email = email };
            var response = await SuperAdminService.ResendCodeAsync(request);
            
            if (response.Success)
            {
                // For development: show the verification code
                successMessage = $"New verification code sent successfully! Your code is: {response.VerificationCode}";
                currentVerificationCode = response.VerificationCode; // Update the displayed code
                timeRemaining = 600; // Reset timer
                StartTimer();
            }
            else
            {
                errorMessage = response.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isResending = false;
        }
    }

    private async Task GetCurrentVerificationCode()
    {
        try
        {
            // For testing: simulate getting the current verification code
            // In a real app, this would call an API to get the current code
            // For now, we'll trigger a forgot password request to get the code
            var request = new SuperAdminForgotPasswordRequest { Email = email };
            var response = await SuperAdminService.ForgotPasswordAsync(request);
            
            if (response.Success)
            {
                currentVerificationCode = response.VerificationCode;
            }
        }
        catch (Exception ex)
        {
            // Silently fail for testing purposes
            Console.WriteLine($"Error getting verification code: {ex.Message}");
        }
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
