@using Microsoft.AspNetCore.Components
@using pos_app.Client.Services

<div class="account-total-display">
    <div class="total-label">@Label</div>
    <input type="text" class="form-control total-value" value="@DisplayValue" readonly />
</div>

<style>
    .account-total-display {
        margin-bottom: 1rem;
    }

    .total-label {
        background-color: #b3d9ff;
        color: #000;
        padding: 0.375rem 0.75rem;
        font-weight: 500;
        border-radius: 0.375rem 0.375rem 0 0;
        border: 1px solid #dee2e6;
        border-bottom: none;
        font-size: 0.875rem;
    }

    .total-value {
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 0 0 0.375rem 0.375rem;
        text-align: right;
        font-weight: 500;
        padding: 0.375rem 0.75rem;
    }

    .total-value:focus {
        outline: none;
        box-shadow: none;
    }
</style>

@code {
    [Parameter] public string Label { get; set; } = string.Empty;
    [Parameter] public decimal Value { get; set; }
    [Parameter] public bool IsCredit { get; set; } = false;

    private string DisplayValue
    {
        get
        {
            var formatted = CurrencyHelper.FormatNumber(Value);
            return IsCredit ? $"{formatted} CR" : formatted;
        }
    }
}
