@using Microsoft.AspNetCore.Components

<div class="row summary-cards g-3">
    @ChildContent
</div>

<style>
    /* Ensure all summary cards have equal height */
    .summary-cards {
        display: flex;
        flex-wrap: wrap;
        align-items: stretch;
        margin-bottom: 1rem;
    }
    
    /* Target all column classes used in summary cards */
    .summary-cards > div[class*="col-"] {
        display: flex;
        margin-bottom: 0 !important;
        align-items: stretch;
    }
    
    .summary-cards .card {
        height: 100% !important;
        display: flex !important;
        flex-direction: column !important;
        width: 100% !important;
        min-height: 120px !important;
    }
    
    .summary-cards .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
    
    /* Mobile responsive adjustments */
    @@media (max-width: 575.98px) {
        .summary-cards > div[class*="col-"] {
            margin-bottom: 0.75rem;
        }
        
        .summary-cards .card {
            min-height: 100px !important;
        }
        
        .summary-cards .card-body h4 {
            font-size: 1.25rem;
        }
        
        .summary-cards .card-body h6 {
            font-size: 0.875rem;
        }
    }
</style>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
