<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" arguments=".\pos-app.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
      <directoryBrowse enabled="false" />
      <defaultDocument>
        <files>
          <clear />
        </files>
      </defaultDocument>
      <security>
        <requestFiltering>
          <hiddenSegments>
            <add segment="App_Data" />
          </hiddenSegments>
        </requestFiltering>
      </security>
      <staticContent>
        <clientCache cacheControlMode="DisableCache" />
      </staticContent>
    </system.webServer>
  </location>
  <location path="App_Data">
    <system.webServer>
      <handlers>
        <clear />
      </handlers>
      <httpHandlers>
        <clear />
      </httpHandlers>
      <authorization>
        <deny users="*" />
      </authorization>
    </system.webServer>
  </location>
</configuration>
