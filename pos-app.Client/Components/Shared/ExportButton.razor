@using Microsoft.AspNetCore.Components

@if (ShowButton)
{
    <button class="@($"btn btn-{ButtonType} {AdditionalClass ?? ""}")" @onclick="HandleClick" disabled="@IsDisabled">
        <i class="@IconClass me-1"></i> @ButtonText
    </button>
}

@code {
    // Whether to show the button
    [Parameter] public bool ShowButton { get; set; } = true;

    // Event callback when button is clicked
    [Parameter] public EventCallback OnClick { get; set; }

    // Button text. Default: "Export To Excel"
    [Parameter] public string ButtonText { get; set; } = "Export To Excel";

    // CSS class for the icon. Default: "fas fa-file-excel"
    [Parameter] public string IconClass { get; set; } = "fas fa-file-excel";

    // Button type/style. Options: "primary", "success", "danger", "info", "warning", "secondary"
    [Parameter] public string ButtonType { get; set; } = "success";

    // Whether the button is disabled
    [Parameter] public bool IsDisabled { get; set; } = false;

    // Additional CSS classes to apply to the button
    [Parameter] public string? AdditionalClass { get; set; }

    private async Task HandleClick()
    {
        if (!IsDisabled)
        {
            await OnClick.InvokeAsync();
        }
    }
}
