@page "/superadmin/reports/{UserId:int}"
@layout pos_app.Client.Components.Layout.SuperAdminMainLayout
@using pos_app.Client.Models
@using pos_app.Client.Services
@inject SuperAdminService SuperAdminService
@inject NavigationManager Navigation

<PageTitle>Reports - @userInfo?.CompanyName</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-chart-bar"></i> Reports</h2>
                    @if (userInfo != null)
                    {
                        <p class="text-muted mb-0">@userInfo.CompanyName - @userInfo.ContactPerson</p>
                    }
                </div>
                <div>
                    <button class="btn btn-outline-secondary me-2" @onclick="GoBack">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </button>
                    <button class="btn btn-primary" @onclick="RefreshReports">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Sales Report Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-shopping-cart"></i> Sales Report</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label class="form-label">Start Date</label>
                                <InputDate class="form-control" @bind-Value="startDate" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">End Date</label>
                                <InputDate class="form-control" @bind-Value="endDate" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                <div>
                                    <button class="btn btn-primary" @onclick="LoadSalesReport">
                                        <i class="fas fa-search"></i> Generate Report
                                    </button>
                                </div>
                            </div>
                        </div>

                        @if (salesReport != null)
                        {
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body text-center">
                                            <h3>@salesReport.TotalSales</h3>
                                            <p class="mb-0">Total Sales</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-success text-white">
                                        <div class="card-body text-center">
                                            <h3>@CurrencyHelper.FormatNumber(salesReport.TotalAmount)</h3>
                                            <p class="mb-0">Total Amount</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-info text-white">
                                        <div class="card-body text-center">
                                            <h3>@CurrencyHelper.FormatNumber(salesReport.AverageAmount)</h3>
                                            <p class="mb-0">Average Amount</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-warning text-white">
                                        <div class="card-body text-center">
                                            <h6>@salesReport.StartDate.ToString("MMM dd")</h6>
                                            <h6>to</h6>
                                            <h6>@salesReport.EndDate.ToString("MMM dd")</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (salesReportError)
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle"></i> Failed to load sales report. Please check database connection.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory Report Section -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-boxes"></i> Inventory Report</h5>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-primary mb-3" @onclick="LoadInventoryReport">
                            <i class="fas fa-sync-alt"></i> Load Inventory
                        </button>

                        @if (inventoryReport != null)
                        {
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <div class="card bg-secondary text-white">
                                        <div class="card-body text-center">
                                            <h3>@inventoryReport.TotalItems</h3>
                                            <p class="mb-0">Total Items</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Product Name</th>
                                            <th>Quantity</th>
                                            <th>Unit Price</th>
                                            <th>Total Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in inventoryReport.Inventory)
                                        {
                                            <tr>
                                                <td>@item.ProductName</td>
                                                <td>@item.Quantity</td>
                                                <td>@CurrencyHelper.FormatNumber(item.UnitPrice)</td>
                                                <td>@CurrencyHelper.FormatNumber(item.TotalValue)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else if (inventoryReportError)
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle"></i> Failed to load inventory report. Please check database connection.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int UserId { get; set; }

    private UserInfo? userInfo;
    private SalesReportData? salesReport;
    private InventoryReportData? inventoryReport;
    private bool isLoading = true;
    private bool salesReportError = false;
    private bool inventoryReportError = false;
    private DateTime startDate = DateTime.Now.AddMonths(-1);
    private DateTime endDate = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserInfo();
        await LoadSalesReport();
    }

    private async Task LoadUserInfo()
    {
        // For now, we'll create a mock user info
        // In a real app, you'd fetch this from the API
        userInfo = new UserInfo
        {
            Id = UserId,
            CompanyName = "Sample Company",
            ContactPerson = "John Doe",
            Email = "john@example.com"
        };
    }

    private async Task LoadSalesReport()
    {
        try
        {
            salesReport = await SuperAdminService.GetSalesReportAsync(UserId, startDate, endDate);
            salesReportError = false;
        }
        catch
        {
            salesReportError = true;
        }
    }

    private async Task LoadInventoryReport()
    {
        try
        {
            inventoryReport = await SuperAdminService.GetInventoryReportAsync(UserId);
            inventoryReportError = false;
        }
        catch
        {
            inventoryReportError = true;
        }
    }

    private async Task RefreshReports()
    {
        isLoading = true;
        await LoadSalesReport();
        await LoadInventoryReport();
        isLoading = false;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/superadmin/dashboard");
    }
}
